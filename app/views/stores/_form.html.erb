<%= form_with(model: store) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% store.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.text_field :name, class:"form-control", placeholder:"Store name" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :location, class:"form-control", placeholder:"Location" %>
  </div>

  <div class="field mb-3">
    <%= form.text_field :store_type, class:"form-control", placeholder:"Type" %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
<% end %>
